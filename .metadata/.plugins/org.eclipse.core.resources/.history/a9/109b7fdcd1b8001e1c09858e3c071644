  HAL_GPIO_Init(GPIOB, &GPIO_InitStruct);

/* USER CODE BEGIN MX_GPIO_Init_2 */
/* USER CODE END MX_GPIO_Init_2 */
}

/* USER CODE BEGIN 4 */

void moverSeguidor(float promedio_arriba, float promedio_abajo, float promedio_iz, float promedio_der)
{
	// Controlar ambos movimientos
	// Controlar el servomotor vertical y horizontal
	int verticalDiff = promedio_arriba - promedio_abajo;
	int horizontalDiff = promedio_der - promedio_iz;

	if (verticalDiff > UMBRAL_LUZ)
	{
		if (pos_servoV > LIMITE_VERTICAL_INF)
		{
			pos_servoV--; // Mover hacia arriba
		}
	}
	else if (verticalDiff < -UMBRAL_LUZ)
	{
		if (pos_servoV < LIMITE_VERTICAL_SUP)
		{
			pos_servoV++; // Mover hacia abajo
		}
	}

	if (horizontalDiff > UMBRAL_LUZ)
	{
		if (pos_servoH < LIMITE_HORIZONTAL_SUP)
		{
			pos_servoH++; // Mover hacia la derecha
		}
	}
	else if (horizontalDiff < -UMBRAL_LUZ)
	{
		if (pos_servoH > LIMITE_HORIZONTAL_INF)
		{
			pos_servoH--; // Mover hacia la izquierda
		}
	}

	// Actualizar el PWM para controlar el servomotor vertical según la posición
	TIM2->CCR2 = round(map(pos_servoV, -90, 90, 50, 100));

	// Actualizar el PWM para controlar el servomotor horizontal según la posición
	TIM2->CCR3 = round(map(pos_servoH, -90, 90, 50, 100));
}

long map(long x, long in_min, long in_max, long out_min, long out_max)
{
	return (x - in_min) * (out_max - out_min) / (in_max - in_min) + out_min;
}

/* USER CODE END 4 */

