/* USER CODE BEGIN PD */
                              // Definiciones de umbrales y límites
#define UMBRAL_LUZ 1000 // Umbral de luz para decidir si se ajusta la posición
#define LIMITE_VERTICAL_SUP 80 // Límite superior de posición vertical
#define LIMITE_VERTICAL_INF -80   // Límite inferior de posición vertical
#define LIMITE_HORIZONTAL_SUP 80 // Límite superior de posición horizontal
#define LIMITE_HORIZONTAL_INF -80   // Límite inferior de posición horizontal

/* USER CODE END PD */

/* Private macro -------------------------------------------------------------*/
/* USER CODE BEGIN PM */

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;
DMA_HandleTypeDef hdma_adc1;

TIM_HandleTypeDef htim2;

/* USER CODE BEGIN PV */
int pos_servoV = 0; // Posición vertical inicial (valor entre -80 y 80)
int pos_servoH = 0; // Posición horizontal inicial (valor entre -80 y 80)
uint32_t LDR_values[4];

/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_DMA_Init(void);
static void MX_ADC1_Init(void);
